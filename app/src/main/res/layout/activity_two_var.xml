<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".for_3_var.ThreeVarActivity"
    android:gravity="center"
    android:padding="10dp"
    android:background="#FFFFFE"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/heading_shape_bg"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:text="Select Appropriate Minterms:"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            >
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_gravity="center"
                android:padding="@dimen/cardview_default_elevation"
                >

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/btn00"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="A'B'"

                    />
                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/btn01"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="A'B"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/btn10"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="AB'"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/btn11"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="AB"
                    />

            </GridLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btn_simplify"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="10dp"
            android:backgroundTint="#C51162"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/let_s_simplify" />
    </LinearLayout>

</LinearLayout>